            android:name=".activities.CloseDayDialog"
            android:label="@string/title_activity_close_day_dialog"
            >
        </activity>
        <activity
            android:name=".activities.Rooms">
        </activity>
        <activity android:name=".activities.Preferences"
            android:label="Настройки"
            />
        <activity android:name=".activities.Journal"
            android:label="Журнал"
            />
