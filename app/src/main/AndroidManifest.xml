        </activity>
        <activity
            android:name=".activities.FileManager"
            android:theme="@style/Base.Theme.AppCompat.Light.Dialog" />

        <service android:name=".services.CloseDayService" />

        <activity
            android:name=".activities.Teachers_Activity"
            android:label="@string/title_activity_teachers_" >
