<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frame_for_grid_aud"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:text="Список пуст. Добавьте аудитории через настройки."
            android:id="@+id/text_empty_aud_list"
            android:gravity="center"
            android:visibility="invisible"
            android:textColor="#ff000000"
            android:textStyle="italic"
            android:textSize="@dimen/text_empty_auditrooms" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/main_fragment_auditroom_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            />

    </FrameLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/layout_main_fragment_disclaimer_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardElevation="10dp">

        <com.example.ivsmirnov.keyregistrator.custom_views.AutoResizeTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="none"
            android:textStyle="italic"
            android:maxLines="5"
            android:text="@string/text_warning"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="100sp" />

    </android.support.v7.widget.CardView>

    <!--<FrameLayout
        android:id="@+id/disclaimer"
