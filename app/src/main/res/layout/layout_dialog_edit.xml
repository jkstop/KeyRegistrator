<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_weight="0.4"
        android:id="@+id/layout_dialog_edit_image_person"
        android:layout_margin="15dp" />

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:id="@+id/layout_dialog_edit_table">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent" android:id="@+id/rowLayoutEdit">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:text="Фамилия"
            android:textColor="#000000"
            android:id="@+id/textEditParametr"
            android:gravity="center_vertical"
            android:layout_weight="0.25" />

        <EditText
            android:hint="Не указано"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:id="@+id/editSurname"
            android:textColor="#ff000000"
            android:textStyle="italic"
            android:layout_weight="0.8" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:text="Имя"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:layout_weight="0.25" />

            <EditText
                android:hint="Не указано"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:textColor="#ff000000"
                android:textStyle="italic"
                android:layout_weight="0.8"
                android:id="@+id/editName" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:text="Отчество"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:layout_weight="0.25" />

            <EditText
                android:hint="Не указано"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:textColor="#ff000000"
                android:textStyle="italic"
                android:layout_weight="0.8"
                android:id="@+id/editLastname" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:text="Кафедра"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:layout_weight="0.25" />

            <EditText
                android:hint="Не указано"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:textColor="#ff000000"
                android:textStyle="italic"
                android:layout_weight="0.8"
                android:id="@+id/editKaf" />
        </TableRow>
    </TableLayout>

</LinearLayout>