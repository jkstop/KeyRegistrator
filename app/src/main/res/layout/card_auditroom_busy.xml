<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/card_auditroom_busy"
    app:cardElevation="@dimen/auditroom_card_elevation"
    app:contentPadding="@dimen/auditroom_card_content_padding"
    app:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/colorAccent">

    <android.support.percent.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.percent.PercentRelativeLayout
            app:layout_widthPercent="35%"
            android:id="@+id/card_auditroom_busy_image_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/auditroom_card_image_margin"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">

          <ImageView
                android:id="@+id/card_auditroom_busy_image_person"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@string/auditroom_grid_busy_image_person_description"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/card_auditroom_busy_image_key"
                android:contentDescription="@string/auditroom_grid_busy_image_key_description"
                android:layout_alignEnd="@id/card_auditroom_busy_image_person"
                android:layout_alignRight="@id/card_auditroom_busy_image_person"
                android:src="@drawable/ic_key_color"
                android:layout_alignParentBottom="true"
                android:scaleType="fitEnd"
                app:layout_widthPercent="35%"
                app:layout_heightPercent = "35%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ProgressBar
                android:id="@+id/card_auditroom_busy_image_progress"
                android:layout_centerInParent="true"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </android.support.percent.PercentRelativeLayout>

        <android.support.percent.PercentRelativeLayout
            android:layout_toEndOf="@+id/card_auditroom_busy_image_layout"
            android:layout_toRightOf="@+id/card_auditroom_busy_image_layout"
            android:layout_marginStart="@dimen/auditroom_card_divider"
            android:layout_marginLeft="@dimen/auditroom_card_divider"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.ivsmirnov.keyregistrator.custom_views.AutoResizeTextView
                android:id="@+id/card_auditroom_busy_text_auditroom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_heightPercent="70%"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="200sp"
                android:gravity="center" />

            <com.example.ivsmirnov.keyregistrator.custom_views.AutoResizeTextView
                android:id="@+id/card_auditroom_busy_text_person"
                android:layout_below="@id/card_auditroom_busy_text_auditroom"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="150sp"
                app:layout_heightPercent="30%"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                />

        </android.support.percent.PercentRelativeLayout>

    </android.support.percent.PercentRelativeLayout>

</android.support.v7.widget.CardView>