<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/auditroom_card_width"
    android:layout_height="@dimen/auditroom_card_height"
    app:cardElevation="@dimen/auditroom_card_elevation"
    app:contentPadding="@dimen/auditroom_card_content_padding"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/auditroom_busy_card">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/card_auditroom_busy_image_person"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:contentDescription="@string/auditroom_grid_busy_image_description"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/auditroom_card_image_margin"/>

        <RelativeLayout
            android:layout_toRightOf="@+id/card_auditroom_busy_image_person"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/card_auditroom_busy_text_auditroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="400"
                android:textColor="@color/black"
                android:textSize="@dimen/auditroom_card_busy_text_size"
                android:layout_centerInParent="true"
                />

            <TextView
                android:id="@+id/card_auditroom_busy_text_person"
                android:text="perosn"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_auditroom_busy_text_auditroom"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>



    </RelativeLayout>

</android.support.v7.widget.CardView>