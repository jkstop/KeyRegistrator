<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/primary_light"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/card_default_content_padding"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/card_email_attach_image"
            android:contentDescription="@string/image_description_email_fragment_icon_attachment"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/card_email_attach_text"
            android:layout_toEndOf="@+id/card_email_attach_image"
            android:layout_toRightOf="@+id/card_email_attach_image"
            android:layout_toStartOf="@+id/card_email_attach_delete"
            android:layout_toLeftOf="@+id/card_email_attach_delete"
            android:layout_marginStart="@dimen/layout_default_margin"
            android:layout_marginLeft="@dimen/layout_default_margin"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:textSize="24sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/card_email_attach_delete"
            android:src="@drawable/ic_cancel_black_24dp"
            android:contentDescription="@string/image_description_email_fragment_icon_delete_attachment"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</android.support.v7.widget.CardView>