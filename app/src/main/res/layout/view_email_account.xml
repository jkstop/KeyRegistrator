<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPadding="@dimen/card_default_content_padding"
    app:cardElevation="@dimen/card_default_elevation"
    app:cardBackgroundColor="@color/primary_light"
    android:layout_margin="@dimen/layout_default_margin">

        <RelativeLayout
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@id/account_fr_head"
                android:text="Аккаунт"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@id/account_fr_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_account_circle_black_48dp"
                android:layout_centerVertical="true"
                android:layout_below="@id/account_fr_head"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/layout_default_margin"/>

            <LinearLayout
                android:layout_toEndOf="@id/account_fr_image"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@id/account_fr_name"
                    android:text="Account name"
                    android:textSize="@dimen/email_account_account_name_size"
                    style="@style/NavigationDrawerAccountInfoText.Black" />

                <TextView
                    android:id="@id/account_fr_email"
                    android:text="account@maiol.ru"
                    android:textSize="@dimen/email_account_account_mail_size"
                    style="@style/NavigationDrawerAccountInfoText.Black" />

            </LinearLayout>



