<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <FrameLayout
        android:layout_margin="16dp"
        android:foreground="@color/black_alpha_50"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/view_resize_frame_seekbar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <include
            layout="@layout/layout_main_fragment" />

    </FrameLayout>


    <LinearLayout
        android:id="@+id/view_resize_frame_seekbar"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <com.example.ivsmirnov.keyregistrator.custom_views.VerticalSeekBar
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

</RelativeLayout>