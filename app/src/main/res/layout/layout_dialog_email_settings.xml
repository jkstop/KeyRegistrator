<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d1f5ff"
        android:padding="15dp"
        android:id="@+id/email_settings_box_layout">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="vertical"
            android:id="@+id/email_settings_box_layout_box_password_frame">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/email_settings_box_layout_box"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5">

                <TextView
                    android:id="@+id/email_settings_box_layout_box_textBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Почтовый ящик"
                    style="@style/Text_Email_Settings" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        style="@style/Text_Email_Settings"
                        android:layout_height="wrap_content"
                        android:id="@+id/email_settings_edit_email" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        style="@style/Text_Email_Settings"
                        android:text=" @gmail.com" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_below="@+id/email_settings_box_layout_box"
                android:id="@+id/email_settings_box_layout_password"
                android:layout_weight="0.5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Text_Email_Settings"
                    android:text="Пароль" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Text_Email_Settings"
                    android:inputType="textPassword"
                    android:id="@+id/email_settings_edit_password" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:id="@+id/email_settings_box_layout_check">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6" />

            <Button
                android:id="@+id/email_settings_check_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                style="@style/Text_Email_Settings"
                android:text="Проверить"
                android:background="#00ffffff" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:id="@+id/email_settings_mail_content_layout"
        android:background="#f8ffe9"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Text_Email_Settings"
            android:text="Получатели (через запятую)" />

        <EditText
            android:layout_width="match_parent"
            style="@style/Text_Email_Settings"
            android:layout_height="wrap_content"
            android:id="@+id/email_settings_edit_recipients" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Text_Email_Settings"
            android:text="Текст письма" />

        <EditText
            android:layout_width="match_parent"
            style="@style/Text_Email_Settings"
            android:layout_height="wrap_content"
            android:id="@+id/email_settings_edit_body" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Text_Email_Settings"
            android:text="Тема" />

        <EditText
            android:layout_width="match_parent"
            style="@style/Text_Email_Settings"
            android:layout_height="wrap_content"
            android:id="@+id/email_settings_edit_email_theme" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                style="@style/Text_Email_Settings"
                android:text="Журнал" />

            <CheckBox
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                style="@style/Text_Email_Settings"
                android:text="Преподаватели" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>