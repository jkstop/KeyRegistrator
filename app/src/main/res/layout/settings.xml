<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.GridLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    app:columnCount="2"
    android:background="@color/background_material_light"
    android:padding="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


        <fragment
            android:name="com.example.ivsmirnov.keyregistrator.Fragment_settings_journal"
            tools:layout="@layout/fragment_settings_journal"
            app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        app:layout_gravity="fill"
        android:layout_width="0dp"
        android:layout_height="0dp"
            android:id="@+id/fragment_base_journal"
            android:tag="@string/fragment1"
            android:layout_margin="15dp" />

        <fragment
            android:name="com.example.ivsmirnov.keyregistrator.Fragment_settings_teachers"
            tools:layout="@layout/fragment_settings_teachers"
            app:layout_rowWeight="1"
            app:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/fragment_base_teachers"
            android:tag="@string/fragment2"
            app:layout_columnWeight="1"
            android:layout_margin="15dp" />

        <fragment
            android:name="com.example.ivsmirnov.keyregistrator.Fragment_settings_general"
            tools:layout="@layout/fragment_settings_general"
            app:layout_rowWeight="1"
            app:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_columnWeight="1"
            android:id="@+id/fragment_base_general"
            android:tag="@string/fragment3"
            android:layout_margin="15dp" />

        <fragment
            android:name="com.example.ivsmirnov.keyregistrator.Fragment_settings_rooms"
            tools:layout="@layout/fragment_settings_rooms"
            app:layout_rowWeight="1"
            app:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_columnWeight="1"
            android:id="@+id/fragment_base_rooms"
            android:tag="@string/fragment4"
            android:layout_margin="15dp" />


    </android.support.v7.widget.GridLayout>

