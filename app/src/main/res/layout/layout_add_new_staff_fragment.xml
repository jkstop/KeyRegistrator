<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_add_new_staff_input"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/layout_add_new_staff_input_text"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="match_parent"
            android:hint="@string/fragment_add_new_staff_edit_hint"
            android:gravity="center"
            android:textColor="#000000"
            android:inputType="textCapWords"
            android:layout_margin="10dp"
            android:focusable="true" />

        <Button
            android:id="@+id/layout_add_new_staff_input_button"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:text="@string/label_add_button"
            style="@style/ButtonTransparent"
            android:layout_margin="10dp" />

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9">

        <ProgressBar
            android:id="@+id/layout_add_new_staff_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center" />

        <GridView
            android:id="@+id/layout_add_new_staff_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnWidth="90dp"
            android:numColumns="3"
            android:verticalSpacing="15dp"
            android:horizontalSpacing="15dp"
            android:stretchMode="columnWidth"
            android:gravity="center">

        </GridView>
    </FrameLayout>

</LinearLayout>