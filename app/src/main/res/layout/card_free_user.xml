<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_free_user"
    android:layout_width="@dimen/card_free_user_width"
    android:layout_height="@dimen/card_free_user_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/person_card_elevation"
    app:cardBackgroundColor="@color/primary"
    app:contentPadding="@dimen/person_card_content_padding">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.example.ivsmirnov.keyregistrator.custom_views.AutoResizeTextView
            android:id="@+id/card_free_user_lastname"
            android:maxLines="1"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/card_free_user_initials"
            android:textColor="@color/black" />

    </RelativeLayout>

</android.support.v7.widget.CardView>