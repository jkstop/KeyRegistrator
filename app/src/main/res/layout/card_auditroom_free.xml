<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    app:cardElevation="@dimen/auditroom_card_elevation"
    app:contentPadding="@dimen/auditroom_card_content_padding"
    app:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="?attr/colorPrimary">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/card_auditroom_free_image_key"
            app:layout_widthPercent = "40%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/auditroom_grid_free_image_descryption"
            android:src="@drawable/ic_key_color"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/auditroom_card_image_margin"/>

        <com.example.ivsmirnov.keyregistrator.custom_views.AutoResizeTextView
            android:id="@+id/card_auditroom_free_text_auditroom"
            android:layout_toEndOf="@+id/card_auditroom_free_image_key"
            android:layout_toRightOf="@+id/card_auditroom_free_image_key"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/default_content_margin"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/empty_text_journal_item_room"
            android:textColor="@color/black"
            android:textSize="120sp" />

    </android.support.percent.PercentRelativeLayout>

</android.support.v7.widget.CardView>