<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">

        <android.support.design.widget.CoordinatorLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_weight="0.97"
            android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/recycler_view_for_base_sql"
                    android:scrollbars="vertical" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/persons_fragment_fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:backgroundTint="@color/colorAccent"
                    app:elevation="@dimen/persons_fragment_fab_elevation"
                    android:src="@drawable/fab_ic_add"
                    android:layout_gravity="end|bottom"
                    app:layout_anchor="@+id/recycler_view_for_base_sql"
                    app:layout_anchorGravity="bottom|end"
                    app:layout_behavior="com.example.ivsmirnov.keyregistrator.others.FABScrollBehavior"
                    />

        </android.support.design.widget.CoordinatorLayout>

        <ListView
            android:id="@+id/list_for_base_sql"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.03"
            android:divider="#00ffffff"
            android:dividerHeight="5dp" />

</LinearLayout>