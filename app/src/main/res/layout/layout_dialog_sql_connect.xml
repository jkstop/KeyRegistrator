<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_default_margin"

        xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_dialog_sql_new_input_server"
            android:layout_alignParentTop="true"
            android:hint="@string/dialog_sql_server_hint_server"
            app:errorEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_dialog_sql_new_input_login"
            android:layout_below="@id/layout_dialog_sql_new_input_server"
            android:hint="@string/dialog_sql_server_hint_user"
            app:errorEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_dialog_sql_new_input_password"
            android:layout_below="@id/layout_dialog_sql_new_input_login"
            android:hint="@string/dialog_sql_server_hint_password"
            app:errorEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatEditText
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/layout_dialog_sql_new_image_status"
            android:layout_below="@id/layout_dialog_sql_new_input_password"
            android:layout_alignStart="@id/layout_dialog_sql_new_input_password"
            android:layout_alignLeft="@id/layout_dialog_sql_new_input_password"
            android:contentDescription="@string/image_description_sql_server_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/layout_dialog_sql_new_text_status"
            android:layout_toRightOf="@id/layout_dialog_sql_new_image_status"
            android:layout_toEndOf="@id/layout_dialog_sql_new_image_status"
            android:layout_toStartOf="@+id/layout_dialog_sql_new_image_reconnect"
            android:layout_toLeftOf="@+id/layout_dialog_sql_new_image_reconnect"
            android:layout_alignBottom="@id/layout_dialog_sql_new_image_status"
            android:textSize="@dimen/dialog_sql_connect_status_text"
            android:gravity="center"
            android:layout_marginLeft="@dimen/default_content_margin"
            android:layout_marginRight="@dimen/default_content_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/layout_dialog_sql_new_image_reconnect"
            android:src="@drawable/ic_sync_black_48dp"
            android:clickable="true"
            android:contentDescription="@string/image_description_sql_server_refresh"
            android:layout_below="@id/layout_dialog_sql_new_input_password"
            android:layout_alignEnd="@id/layout_dialog_sql_new_input_password"
            android:layout_alignRight="@id/layout_dialog_sql_new_input_password"
            android:layout_alignBottom="@id/layout_dialog_sql_new_image_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>
</ScrollView>
