<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPadding="@dimen/card_default_content_padding"
    app:cardElevation="@dimen/card_default_elevation"
    app:cardBackgroundColor="@color/primary_light"
    android:layout_margin="@dimen/layout_default_margin">

    <RelativeLayout
        android:layout_gravity="start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@id/period_fr_head"
            android:text="Периодичность"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

        <LinearLayout
            android:layout_margin="@dimen/layout_default_margin"
            android:id="@id/period_fr_days_group"
            android:layout_below="@id/period_fr_head"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ПН" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ВТ" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="СР" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ЧТ" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ПТ" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="СБ" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ВС" />

        </LinearLayout>

        <android.support.v7.widget.AppCompatImageView
            android:layout_below="@id/period_fr_days_group"
            app:srcCompat="@drawable/ic_info_black_24dp"
            android:id="@id/period_fr_status_task_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Состояние задачи"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/period_fr_status_task_icon"
            android:layout_toEndOf="@id/period_fr_status_task_icon" />
    </RelativeLayout>

</android.support.v7.widget.CardView>