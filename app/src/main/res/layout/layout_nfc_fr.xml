<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/nfc_fragment_head"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nfc_fragment_head"
        android:textColor="@color/black"
        android:textSize="@dimen/auth_user_fr_head_text"
        android:gravity="center" />

    <TextView
        android:id="@+id/nfc_fragment_aud"
        android:layout_below="@id/nfc_fragment_head"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="@dimen/card_nfc_aud_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/nfc_fragment_reader_image"
        android:layout_below="@+id/nfc_fragment_aud"
        android:layout_margin="@dimen/layout_default_margin"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_down_anim"
        android:contentDescription="@string/descryption_nfc_fragment_reader_image" />

    <Button
        android:id="@+id/nfc_fragment_free_users_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/layout_default_margin"
        style="@style/ButtonMaterial"
        android:text="@string/nfc_fragment_free_users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>