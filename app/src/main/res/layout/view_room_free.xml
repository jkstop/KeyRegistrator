<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/room_free_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="@dimen/card_default_elevation"
    app:contentPadding="@dimen/content_default_margin"
    app:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="?attr/colorPrimary">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.support.v7.widget.AppCompatImageView
            android:id="@id/room_free_card_image_key"
            app:layout_widthPercent = "40%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_key_color"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/content_default_margin"/>

        <com.example.ivsmirnov.keyregistrator.custom_views.AutoResizeTextView
            android:id="@id/room_free_card_text_room"
            android:layout_toEndOf="@id/room_free_card_image_key"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/content_default_margin"
            android:gravity="center"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            android:text="@string/text_room_empty"
            android:textColor="@color/black"
             />

    </android.support.percent.PercentRelativeLayout>

</android.support.v7.widget.CardView>