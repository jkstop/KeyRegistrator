<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_navigation_drawer_rootLayout"
    style="@style/ScrimInsetsLayout"
    tools:context=".activities.Launcher"
    android:layout_width="240dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/navigation_drawer_account_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navigation_drawer_account_selection_height"
            android:clickable="false">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="@color/black_alpha_50"
                android:background="@drawable/rrr">
            </FrameLayout>

            <RelativeLayout
                android:id="@+id/navigation_drawer_account_section"
                style="@style/NavigationDrawerAccountInfo">
                <TextView
                    android:id="@+id/navigation_drawer_account_information_display_name"
                    style="@style/NavigationDrawerAccountInfoText"
                    android:text="@string/navigation_drawer_account_info_text_user" />
                <TextView
                    android:id="@+id/navigation_drawer_account_information_email"
                    style="@style/NavigationDrawerAccountInfoText"
                    android:layout_below="@+id/navigation_drawer_account_information_display_name"
                    android:text="@string/navigation_drawer_account_info_text_email" />
            </RelativeLayout>

        </RelativeLayout>

        <ListView
            android:id="@+id/left_navigation_drawer_list"
            style="@style/NavigationDrawerList">
        </ListView>

    </LinearLayout>

</FrameLayout>