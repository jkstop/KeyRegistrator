<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="MyThemeDialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#ff00ff</item>
    </style>

    <!-- Button Transparent -->

    <style name="ButtonTransparent">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <!-- ScrimInsetLayout -->
    <style name="ScrimInsetsLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:layout_gravity">start</item>

    </style>

    <style name="Text_Email_Settings">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>


    <!-- You can also inherit from NNF_BaseTheme.Light -->
    <style name="FilePickerTheme" parent="NNF_BaseTheme">
        <!-- Set these to match your theme -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent_material_dark</item>

        <!-- Need to set this also to style create folder dialog -->
        <item name="alertDialogTheme">@style/FilePickerAlertDialogTheme</item>

        <!-- If you want to set a specific toolbar theme, do it here -->
        <!-- <item name="nnf_toolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item> -->
    </style>

    <style name="FilePickerAlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent_material_dark</item>
        <item name="android:textColorPrimary">@color/primary_text_material_dark</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/toolbar_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="NavigationDrawerItemText">
        <item name="android:textSize">@dimen/navigation_drawer_item_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/navigation_drawer_item_text_left_margin</item>
    </style>

    <style name="NavigationDrawerItemImage">
        <item name="android:layout_height">@dimen/navigation_drawer_item_image_height</item>
        <item name="android:layout_width">@dimen/navigation_drawer_item_image_width</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/navigation_drawer_item_left_margin</item>
        <item name="android:contentDescription">@string/navigation_drawer_list_item_content_description_image</item>
    </style>

    <style name="NavigationDrawerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/navigation_drawer_item_height</item>
        <item name="android:layout_marginRight">@dimen/navigation_drawer_item_right_margin</item>
    </style>

    <style name="NavigationDrawerSeperator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/navigation_drawer_separator_height</item>
        <item name="android:background">@color/black_alpha_50</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="NavigationDrawerList" parent="Widget.AppCompat.ListView">
        <item name="android:background">@color/material_grey_100</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:dividerHeight">@dimen/navigation_drawer_divider_height</item>
        <item name="android:divider">@color/transparent</item>
    </style>

    <style name="NavigationDrawerAccountInfoText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/navigation_drawer_account_info_text_size</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NavigationDrawerAccountInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/navigation_drawer_account_info_height</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/nav_drawer_left_margin</item>
        <item name="android:layout_marginRight">@dimen/nav_drawer_right_margin</item>
    </style>

</resources>
